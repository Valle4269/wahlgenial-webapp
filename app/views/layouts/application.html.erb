      ga('create', 'UA-43772124-1', 'wahldatenhelfer.de');
      ga('send', 'pageview');

    </script>
  </head>
  <body>
      <div class="container">
      <div class="row header-row">
        <div class="col-lg-4 col-md-4 col-sm-4">
          <a class="logo" href="/">
            <%= image_tag("wahl_daten_helfer_logo.svg") %>
          </a>
        </div>
        <div class="col-lg-8 col-md-8 col-sm-8">
          <div class="nav">
            <a href="/faq">Glossar</a>
            <a href="/ueber">Über</a>
            <a class="img-nav" href="https://www.facebook.com/hack.institute">
              <%= image_tag("facebook.svg", class: "social") %>
            </a>
            <a class="img-nav" href="https://twitter.com/WahlDatenHelfer">
              <%= image_tag("twitter.svg", class: "social") %>
            </a>
          </div>
        </div>
        <div class="white">
          <strong>Apps, Viz und Hacks zur Wahl 2017</strong>
        </div>
      </div>
      <%= yield %>
      <div class="row footer-row">
        <div class="col-lg-12 text-center">
          <a href="http://railslove.com/">
            <%= image_tag("railslove-white.png", class: "margin", alt: "Railslove Logo") %>
          </a>
          <a href="https://codefor.de/koeln/">
            <%= image_tag("codefor.jpg", class: "margin", alt: "Code for Germany Logo") %>
          </a>
          <a href="http://okfn.de/">
            <%= image_tag("okfn-white.png", class: "margin", alt: "OKFN Logo") %>
          </a>
          <a href="http://www.stadt-koeln.de/">
            <%= image_tag("stadt_koeln.png", class: "partner", alt: "Stadt Köln Logo") %>
          </a>
        </div>
      </div>
      <div class="row">
        <div class="impressum pull-right">
          <a href="https://www.railslove.com/impressum.txt">Impressum</a>
        </div>
      </div>
    </div>
    <script type="text/javascript" src="/scripts/retina.js"></script>
  </body>
</html>
